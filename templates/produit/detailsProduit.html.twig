{% extends 'base.html.twig' %}

{% block title %}Tous nos manga
{% endblock %}

{% block carousel %}{% endblock %}
{% block stylesheets %}
	{# <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">																																									         #}
	<link rel="stylesheet" href="{{ asset ('style.css')}}">
    <link href="{{ asset ('assets/css/bootstrap.min.css')}}" rel="stylesheet">
	
{% endblock %}

{% block body %}

	<h1 class="text-center">Détail du Produit</h1>
	<div class="row" >
			<div class="col-md-7">
				<div class="card" style="width: 25rem;">
					<img  class="card-img-top" src="assets/images/produits/{{produit.image}}">
					<div class="card-body">
						<h5 class="card-title">{{ produit.nom }}</h5>
						<p class="card-text">{{ produit.description }}</p>
                        <p class="card-text">Prix : {{ (produit.prix / 100) |number_format(2, ',' , '.')}}€</p>
						<a class="btn btn-primary my-2 my-sm-0" href="{{path('ajouterPanier' , { 'id' : produit.id })}}" type="submit"><img src="{{ asset('assets/images/cart.svg')}}" alt="panier" width="20px">
							Ajouter au panier</a>
					</div>
				</div>
			</div>

	</div>
{% endblock %}
