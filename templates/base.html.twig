					{% block body %}
					

					{% endblock %}{% block footer %}
<section
	class="">
	<!-- Footer -->
	<footer
		class="text-center text-white" style="background-color: #0a4275;">
		<!-- Grid container -->
		<div
			class="container p-4 pb-0">
			<!-- Section: CTA -->
			<section class="">
				{% if app.user %}
					<p class="d-flex justify-content-center align-items-center">
						<span class="me-3">A bientôt
							{{app.user.prenom}}
							!</span>
						<a type="button" class="btn btn-outline-light btn-rounded" href="{{path ('app_logout')}}">
							Déconnexion
						</a>
					{% else %}
						<p class="d-flex justify-content-center align-items-center">
							<span class="me-3">Inscrivez-vous gratuitement!</span>
							<a type="button" class="btn btn-outline-light btn-rounded" href="{{path ('inscription')}}">
								Inscription</a>
						</p>
						<p class="d-flex justify-content-center align-items-center">
							<span class="me-3">Vous avez déjà un compte ? Connectez-vous!
							</span>
							<a type="button" class="btn btn-outline-light btn-rounded" href="{{path ('app_login')}}">
								Connexion
							</a>
						{% endif %}

					</p>
				</section>
				<!-- Section: CTA -->
			</div>
			<!-- Grid container -->

			<!-- Copyright -->
			<div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
				© 2020 Copyright:
				<a class="text-white" href="{{path ('accueil')}}">mangashop.com</a>
			</div>
			<div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
				<a class="text-white" href="{{path ('contact')}}">Nous contacter</a>
			</div>
			<!-- Copyright -->

			<div class="text-start p5">
				<a class="btn btn-social-icon btn-facebook" style="color: #3B5998;" href="{{path ('accueil')}}" role="button">
					<i class="fa fa-facebook-f "></i>
				</a>
				<a class="btn btn-social-icon btn-twitter" style="color: #55ACEE;" href="{{path ('accueil')}}" role="button">
					<i class="fa fa-twitter "></i>
				</a>
				<a class="btn btn-social-icon btn-instagram" style="color: #3F729B;" href="{{path ('accueil')}}" role="button">
					<i class="fa fa-instagram "></i>
				</a>
			</div>

		</footer>
		<!-- Footer -->
	</section>
{% endblock %}</body>{% block script %}{% endblock %}</html>
