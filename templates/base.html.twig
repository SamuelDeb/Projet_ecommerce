<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}MangaShop
			{% endblock %}
		</title>

		{% block stylesheets %}
			{# <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
																																																																																							         #}
			<link href="{{ asset ('assets/css/bootstrap.min.css')}}" rel="stylesheet">
			<link rel="stylesheet" href="{{ asset ('style.css')}}">
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


		{% endblock %}

		{% block javascripts %}
			{#<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
																																																																																							          #}
			<script src="{{ asset ('assets/js/bootstrap.bundle.js') }}"></script>
		{% endblock %}
		{% block jsStripe %}{% endblock %}
	</head>
	<body>
		{% block menu %}
			<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
				<div class="container-fluid">
					<a class="navbar-brand" href="{{path ('accueil')}}">MangaShop</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>

					<div class="collapse navbar-collapse" id="navbarColor02">
						<ul class="navbar-nav me-auto">
							<li class="nav-item">
								<a class="nav-link active" href="{{path ('admin')}}">Administration
									<span class="visually-hidden">(current)</span>
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{path ('produit')}}">Catalogue</a>
							</li>

						</div>
					</li>
				</ul>
				<form class="d-flex">

					{% if app.user %}
						<a class="btn btn-primary my-2 my-sm-0" href="{{path ('compte')}}" type="submit">Mon compte({{app.user.prenom}})</a>
						<a class="btn btn-primary my-2 my-sm-0" href="{{path ('app_logout')}}" type="submit">Se deconnecter</a>
						<a class="btn btn-primary my-2 my-sm-0" href="{{path ('cart')}}" type="submit"><img src="{{ asset('assets/images/cart.svg')}}" alt="panier" width="25px">
							<i class="fas fa-shopping-basket">
								<span class="badgeNB position-absolute tranlate-middle badge rounded-pill bg-info">{{ monPanier.nbArticle() }}</span>
							</i>
						</a>

					{% else %}
						<a class="btn btn-primary my-2 my-sm-0" href="{{path ('inscription')}}" type="submit">S'inscrire</a>
						<a class="btn btn-primary my-2 my-sm-0" href="{{path ('app_login')}}" type="submit">Se Connecter</a>
					{% endif %}
				</form>
			</div>
		</body>
	</html>
</div></nav>
{% endblock %} 
